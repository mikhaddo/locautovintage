{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="row">

        {# display none if screen maximum small. 6 columns in case of screen small
        background-image in the css : .img_home ; vh-100 for resizing #}
        <div class="d-none d-sm-block col-sm-6 img_home vh-100"></div>

    <div class="col-sm-6">
        <h2 class="text-center my-3">Connectez-vous</h2>

        {% if app.user %}
            <div class="mb-3">
                Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form class="row col-10 offset-1 col-md-8 offset-md-2 d-flex justify-content-center" method="POST">

            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mb-3" required autofocus>
            <label for="inputPassword">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control" required>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}

            <button class="btn btn-warning mt-3" type="submit">Se connecter</button>
        </form>

    </div>

</div>

{% endblock %}
